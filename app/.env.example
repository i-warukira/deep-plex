# API Keys
OPENAI_API_KEY=<your-openai-api-key>
FIRECRAWL_API_KEY=<your-firecrawl-api-key>

# Perplexity Configuration
PERPLEXITY_API_KEY=<your-perplexity-api-key>
# Find all supported models here: https://perplexity.ai/models?order=newest
PERPLEXITY_MODEL=sonar-pro
PERPLEXITY_TEMPERATURE=0.7
PERPLEXITY_MODEL_MAX_TOKENS=4000

# App Configuration
APP_URL=http://localhost:3000
APP_NAME=Advanced Deep Research

# Optional: Firecrawl Configuration
# FIRECRAWL_BASE_URL="http://localhost:3002"

# Optional: LangSmith Configuration (for monitoring)
# LANGSMITH_API_KEY=<your-langsmith-api-key>
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_PROJECT=AdvancedResearch

# Context Size
CONTEXT_SIZE="128000"
